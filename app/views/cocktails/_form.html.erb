<div class="d-flex justify-content-center">
  <%= simple_form_for @cocktail do |f| %>
    <div id="form-cocktail" class="form-inline">
      <%= f.input :name, placeholder: 'My god damn cocktail', label: false %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "Validate", class: "btn btn-warning" %>
    </div>
  <% end %>
</div>
